<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/config_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cpu_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cpu_label" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:id="@+id/cpu_quantity_col"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cpu_quantity_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cpu_quantity_label" />

                    <EditText
                        android:id="@+id/cpu_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number"
                        android:minHeight="48dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cpu_core_units_col"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cpu_core_units_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cpu_core_units_label" />

                    <EditText
                        android:id="@+id/cpu_core_units"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number"
                        android:minHeight="48dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cpu_tdp_col"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cpu_tdp_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cpu_tdp_label" />

                    <EditText
                        android:id="@+id/cpu_tdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number"
                        android:minHeight="48dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cpu_architecture_col"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cpu_architecture_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cpu_architecture_label" />

                    <Spinner
                        android:id="@+id/cpu_architecture_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>